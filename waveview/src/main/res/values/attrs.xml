<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundWaveView">
        <attr name="pointCount" format="integer" />
        <attr name="useAnimation" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MainWaveView">
        <attr name="waveH" format="dimension" />
        <attr name="waveW" format="dimension" />
        <attr name="roundWaveType" format="enum">
            <enum name="normal" value="0"/>
            <enum name="positive" value="1"/>
            <enum name="negative" value="2"/>
        </attr>
        <attr name="waveRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="HorizontalWaveView">
        <attr name="waveFrequency" format="float" />
        <attr name="waveIdleAmplitude" format="float" />
        <attr name="wavePhaseShift" format="float" />
        <attr name="waveInitialPhaseOffset" format="float" />
        <attr name="waveHeight" format="dimension" />
        <attr name="waveVerticalPosition" format="float" />
        <attr name="waveColor" format="color" />
        <attr name="waveAmount" format="integer" />
    </declare-styleable>
</resources>