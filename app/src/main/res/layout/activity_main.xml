<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">


            <Button
                android:id="@+id/btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="demo type car"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_300">


                <com.waveview.WaveView
                    android:id="@+id/wave_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_300"
                    android:layout_marginTop="5dp"
                    app:disableHorizontal="false"
                    app:roundWaveType="all"
                    app:isOval="false"
                    app:waveCount="50"
                    app:hideRoundWave="true"
                    app:waveH="80dp"
                    app:waveW="250dp" />

            </RelativeLayout>

            <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <com.waveview.WaveView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            app:roundWaveType="all"
            app:waveW="50dp"
            app:waveH="30dp" />


            </LinearLayout>

            </HorizontalScrollView>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NORMAL"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary" />

            <com.waveview.WaveView
            android:id="@+id/wave_normal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:roundWaveType="normal"
            app:waveW="150dp"
            app:waveH="50dp" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="POSITIVE"
            android:textColor="@color/colorPrimary" />

            <com.waveview.WaveView
            android:id="@+id/wave_positive"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:roundWaveType="positive"
            app:waveW="150dp"
            app:waveH="50dp" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NEGATIVE"
            android:textColor="@color/colorPrimary" />

            <com.waveview.WaveView
            android:id="@+id/wave_negative"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:roundWaveType="negative"
            app:waveH="50dp"
            app:waveW="150dp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
